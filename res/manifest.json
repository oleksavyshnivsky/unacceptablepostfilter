{
	"manifest_version": 2,
	"name": "Unacceptable Posts Filter UA",
	"description": "Прибирання неприйнятномовних текстівок",
	"version": "0.1",
	"permissions": ["activeTab", "declarativeContent", "storage"],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "assets/icon16.png"
    },
    "options_page": "options.html",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
    },
	"content_scripts": [
		{
			"matches": [
				"https://*/*",
				"http://*/*"
			],
			"js": ["content.js"],
			"css": ["styles.css"]
		}
	],
	"icons": {
		"16": "assets/icon16.png",
		"48": "assets/icon48.png",
		"128": "assets/icon128.png"
	},
	"default_locale": "uk"
}